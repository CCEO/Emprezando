<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer">
        <!-- Main content view-->
        <RelativeLayout
            android:background="#571f4f"
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="match_parent">


            <android.support.v4.view.ViewPager
                android:id="@+id/main_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <mx.com.cceo.emprezando.Util.CustomPagerTabStrip
                    android:id="@+id/pager_title_strip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"/>
            </android.support.v4.view.ViewPager>



        </RelativeLayout>

        <!-- Side Menu-->
        <RelativeLayout
            android:layout_gravity="start"
            android:id="@+id/left_drawer"
            android:layout_width="240dip"
            android:background="#111"
            android:layout_height="match_parent" >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_margin="16dip"
                        android:layout_width="match_parent"
                        android:layout_height="60dip"
                        android:src="@drawable/logo_white"/>
                    <RelativeLayout
                        android:clickable="true"
                        android:id="@+id/drawer_information"
                        android:padding="16dip"
                        android:layout_width="match_parent"
                        android:layout_height="72dip">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/item_program_profile1"
                            android:src="@drawable/icon_information"
                            android:layout_width="36dp"
                            android:layout_centerVertical="true"
                            android:layout_height="36dp"/>
                        <TextView
                            android:layout_marginStart="16dip"
                            android:layout_centerVertical="true"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#FFFFFF"
                            android:textSize="16dp"
                            android:layout_toEndOf="@+id/item_program_profile1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="InformaciÃ³n"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:clickable="true"
                        android:id="@+id/drawer_program"
                        android:padding="16dip"
                        android:layout_width="match_parent"
                        android:layout_height="72dip">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:src="@drawable/icon_program"
                            android:id="@+id/drawer_item_2"
                            android:layout_centerVertical="true"
                            android:layout_width="36dip"
                            android:layout_height="36dip" />
                        <TextView
                            android:layout_marginStart="16dip"
                            android:layout_centerVertical="true"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#FFFFFF"
                            android:layout_toEndOf="@+id/drawer_item_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Programa"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:clickable="true"
                        android:id="@+id/drawer_memories"
                        android:padding="16dip"
                        android:layout_width="match_parent"
                        android:layout_height="72dip">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:src="@drawable/icon_memories"
                            android:id="@+id/drawer_item_3"
                            android:layout_centerVertical="true"
                            android:layout_width="36dip"
                            android:layout_height="36dip" />
                        <TextView
                            android:layout_marginStart="16dip"
                            android:layout_centerVertical="true"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#FFFFFF"
                            android:layout_toEndOf="@+id/drawer_item_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Memorias"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:clickable="true"
                        android:id="@+id/drawer_venue"
                        android:padding="16dip"
                        android:layout_width="match_parent"
                        android:layout_height="72dip">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:src="@drawable/icon_venue"
                            android:id="@+id/drawer_item_4"
                            android:layout_centerVertical="true"
                            android:layout_width="36dip"
                            android:layout_height="36dip" />
                        <TextView
                            android:layout_marginStart="16dip"
                            android:layout_centerVertical="true"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#FFFFFF"
                            android:layout_toEndOf="@+id/drawer_item_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sede"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:clickable="true"
                        android:id="@+id/drawer_register"
                        android:padding="16dip"
                        android:layout_width="match_parent"
                        android:layout_height="72dip">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:src="@drawable/icon_register"
                            android:id="@+id/drawer_item_5"
                            android:layout_centerVertical="true"
                            android:layout_width="36dip"
                            android:layout_height="36dip" />
                        <TextView
                            android:layout_marginStart="16dip"
                            android:layout_centerVertical="true"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#FFFFFF"
                            android:layout_toEndOf="@+id/drawer_item_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Registro"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:clickable="true"
                        android:padding="16dip"
                        android:layout_width="match_parent"
                        android:layout_height="84dip">
                        <ImageView
                            android:id="@+id/main_logo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            android:src="@drawable/logo_cceo_small"/>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>



    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>