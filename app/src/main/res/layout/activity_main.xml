<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer">
        <!-- Main content view-->
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="#5186A8"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:padding="4dip"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:contentDescription="Logo"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/logo_white"/>
                    </RelativeLayout>

                    </android.support.v7.widget.Toolbar>

                <android.support.design.widget.TabLayout

                    android:id="@+id/tabs"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    style="@style/MyCustomTabLayout"
                    android:textColor="#999999"
                    android:layout_height="wrap_content"
                    app:tabMode="scrollable"/>
            </android.support.design.widget.AppBarLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/main_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"  />



            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:animateLayoutChanges="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@drawable/register_logo_white"/>
        </android.support.design.widget.CoordinatorLayout>

        <!-- Side Menu-->
        <RelativeLayout
            android:layout_gravity="start"
            android:id="@+id/left_drawer"
            android:layout_width="240dip"
            android:background="#fafafa"
            android:layout_height="match_parent" >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_margin="16dip"
                        android:layout_width="match_parent"
                        android:layout_height="60dip"
                        android:src="@drawable/logo_smnall"/>
                    <View
                        android:layout_margin="8dip"
                        android:background="#000000"
                        android:alpha="0.12"
                        android:layout_width="match_parent"
                        android:layout_height="1dip"/>
                    <RelativeLayout
                        android:id="@+id/drawer_information"
                        android:layout_width="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_height="48dip">
                        <ImageView
                            android:layout_marginLeft="16dip"
                            android:layout_width="24dip"
                            android:layout_centerVertical="true"
                            android:layout_height="24dip"
                            android:alpha="0.54"

                            android:background="@drawable/information_black"
                            android:id="@+id/image_view_heigth" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="72dip"
                            android:layout_centerVertical="true"
                            android:textColor="#000000"
                            android:alpha="0.87"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="InformaciÃ³n"
                            android:id="@+id/drawer_heigth" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/drawer_program"
                        android:layout_width="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_height="48dip">
                        <ImageView
                            android:layout_marginLeft="16dip"
                            android:layout_width="24dip"
                            android:layout_centerVertical="true"
                            android:layout_height="24dip"
                            android:alpha="0.54"

                            android:background="@drawable/calendar_black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="72dip"
                            android:layout_centerVertical="true"
                            android:textColor="#000000"
                            android:alpha="0.87"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Programa" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/drawer_memories"
                        android:layout_width="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_height="48dip">
                        <ImageView
                            android:layout_marginLeft="16dip"
                            android:layout_width="24dip"
                            android:layout_centerVertical="true"
                            android:layout_height="24dip"
                            android:alpha="0.54"

                            android:background="@drawable/clock_icon_black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="72dip"
                            android:layout_centerVertical="true"
                            android:textColor="#000000"
                            android:alpha="0.87"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Memorias" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/drawer_venue"
                        android:layout_width="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_height="48dip">
                        <ImageView
                            android:layout_marginLeft="16dip"
                            android:layout_width="24dip"
                            android:layout_centerVertical="true"
                            android:layout_height="24dip"
                            android:alpha="0.54"

                            android:background="@drawable/home_black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="72dip"
                            android:layout_centerVertical="true"
                            android:textColor="#000000"
                            android:alpha="0.87"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Sede" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/drawer_register"
                        android:layout_width="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_height="48dip">
                        <ImageView
                            android:layout_marginLeft="16dip"
                            android:layout_width="24dip"
                            android:layout_centerVertical="true"
                            android:layout_height="24dip"
                            android:alpha="0.54"

                            android:background="@drawable/ticket_blackt" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="72dip"
                            android:layout_centerVertical="true"
                            android:textColor="#000000"
                            android:alpha="0.87"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Registro" />
                    </RelativeLayout>


                </LinearLayout>
            </ScrollView>
            <RelativeLayout
                android:clickable="true"
                android:padding="16dip"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_alignParentBottom="true"
                    android:id="@+id/main_logo"
                    android:layout_width="match_parent"
                    android:layout_height="70dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/logo_update"/>
            </RelativeLayout>
        </RelativeLayout>



    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>