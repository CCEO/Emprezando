<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#571f4f">
    <RelativeLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dip">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/description_profile_image"
            android:layout_width="84dp"
            android:layout_height="96dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#00000000"/>
        <View
            android:layout_marginBottom="8dip"
            android:layout_marginTop="8dip"
            android:id="@+id/description_separator2"
            android:layout_below="@+id/description_profile_image"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:alpha="0.88"
            android:background="#FFFFFF"/>

        <TextView
            android:layout_marginLeft="8dip"
            android:layout_marginTop="19dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Awesome Presentation"
            android:id="@+id/description_name"
            android:layout_toEndOf="@+id/description_profile_image"
            android:layout_marginBottom="0dp" />

        <TextView
            android:layout_marginLeft="8dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sr. Dr. Prof. Patrick"
            android:id="@+id/description_speaker"
            android:textColor="#ffffff"
            android:layout_below="@+id/description_name"
            android:layout_toEndOf="@+id/description_profile_image" />

        <TextView
            android:layout_marginTop="16dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="The quick fox jumped over the lazy turtle or something like that"
            android:id="@+id/description_about"
            android:textSize="17sp"
            android:layout_below="@+id/description_profile_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="8dip"/>

        <View
            android:layout_marginBottom="8dip"
            android:id="@+id/description_separator"
            android:layout_below="@+id/description_about"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:alpha="0.88"
            android:background="#FFFFFF"/>

        <Button
            android:layout_below="@+id/description_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:padding="8dip"
            android:background="#2b2855"
            android:text="Manda tus dudas por e-mail"
            android:id="@+id/description_send" />
    </RelativeLayout>
</ScrollView>