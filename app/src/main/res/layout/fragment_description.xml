<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff3f3f3">
    <RelativeLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dip">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Awesome Presentation"
        android:id="@+id/description_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_marginTop="0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sr. Dr. Prof. Patrick"
        android:id="@+id/description_speaker"
        android:layout_below="@+id/description_name"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_marginTop="16dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The quick fox jumped over the lazy turtle or something like that"
        android:id="@+id/description_about"
        android:layout_below="@+id/description_speaker"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dip"/>

        <View
            android:layout_marginBottom="8dip"
            android:id="@+id/description_separator"
            android:layout_below="@+id/description_about"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:alpha="0.12"
            android:background="#000000"/>

        <Button
            android:layout_below="@+id/description_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Manda tus dudas por e-mail"
            android:id="@+id/description_send" />
    </RelativeLayout>
</ScrollView>