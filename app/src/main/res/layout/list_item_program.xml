<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="-8dip"
    android:padding="16dip">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="96dip">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dip"
            android:layout_marginTop="24dip"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="21"
            android:id="@+id/item_program_day"
            android:layout_alignTop="@+id/item_program_day"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dip"
            android:layout_marginTop="16dip"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="OCT"
            android:id="@+id/item_program_month"
            android:layout_gravity="center_vertical"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dip"
            android:layout_marginStart="90dip"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Mi Gran Conferencia"
            android:id="@+id/item_program_title"
            android:layout_gravity="center_vertical|top"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dip"
            android:layout_marginStart="90dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sr. Dr. Prof. Patricio"
            android:id="@+id/item_program_speaker"
            android:layout_gravity="center_vertical"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip"
            android:layout_marginStart="90dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="09:30 - 10:40"
            android:id="@+id/item_program_time"
            android:layout_gravity="center_vertical|bottom"
            android:layout_alignParentStart="true" />


    </android.support.v7.widget.CardView>

</RelativeLayout>