
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="8dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_width="match_parent"
        android:layout_height="96dip"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:id="@+id/item_program_card">

        <RelativeLayout
            android:layout_marginLeft="16dip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/item_program_profile"
                android:layout_width="61dp"
                android:layout_centerVertical="true"
                android:layout_height="70dp"
                app:civ_border_width="1dp"
                app:civ_border_color="#00000000"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dip"
            android:layout_marginStart="90dip"
            android:textSize="21sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Mi Gran Conferencia"
            android:id="@+id/item_program_title"
            android:layout_gravity="center_vertical|top"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginStart="90dip"
            android:textSize="18sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sr. Dr. Prof. Patricio"
            android:id="@+id/item_program_speaker"
            android:layout_gravity="center_vertical"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip"
            android:layout_marginStart="90dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="09:30 - 10:40"
            android:id="@+id/item_program_time"
            android:layout_gravity="center_vertical|bottom"
            android:layout_alignParentStart="true" />


    </android.support.v7.widget.CardView>
