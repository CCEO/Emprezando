<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">#34495E</item>
        <item name="colorPrimary">#222222</item>
        <item name="colorAccent">#5186A8</item>
        <item name="android:textColorPrimary">#CC000000</item>
    </style>

    <style name="Pager">
        <item name="android:textColor">#ffffff</item>
        <item name="indicatorColor">#6f8dc5</item>
    </style>

    <style name="toolbar_dark" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">#00FF00</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">#5186A8</item>
        <item name="tabIndicatorColor">#5186A8</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#999999</item>
    </style>

</resources>
